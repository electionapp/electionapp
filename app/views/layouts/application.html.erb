<!DOCTYPE html>
<html>
  <head>
    <title>Electionapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <!-- <%= yield %> -->

    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <%= link_to 'electionapp', root_path, class: 'navbar-brand' %>
        </div>
        <div id="navbar">
          <% if signed_in? %>
          <ul class="nav navbar-nav">
            <li><%= link_to 'Add Page', sign_in_path %></li>
            <!-- <li><%= link_to 'Add Page', new_password_path %></li> -->
          </ul>
          <% end %>

          <ul class="nav navbar-nav pull-right">
            <% if signed_in? %>
            <li><span><%= current_user.email %></span></li>
            <li><span><%= current_user.created_at %></span></li>
            <li><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
            <% else %>
            <li><%= link_to 'Sign in', sign_in_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">
      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
      <% end %>

      <%= yield %>
    </div>


  </body>
</html>
